<Page x:Class="EasySaveProject.ExecuteFolder.ExecuteWork"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveProject.ExecuteFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExecuteWork">

    <Grid>
        <StackPanel Margin="20,20,20,106">
            <TextBlock Text="Execute Work" FontSize="16" FontWeight="Bold" />
            <ListView Name="WorkList" ItemsSource="{Binding Works}" BorderBrush="#cdcdcd" Margin="25,70,25,25" Padding="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding saveName}" Header="Work Name"/>
                        <GridViewColumn DisplayMemberBinding="{Binding sourceRepo}" Header="Source Repo"/>
                        <GridViewColumn DisplayMemberBinding="{Binding targetRepo}" Header="Target Repo"/>
                    </GridView>
                </ListView.View>
            </ListView>
           <!-- <Button Content="Return" Command="{Binding ReturnCommand}" Height="35"/> -->

        </StackPanel>
    </Grid>
</Page>
