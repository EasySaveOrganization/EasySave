<Page x:Class="EasySaveProject.LanguageFolder.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveProject.LanguageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">
    
    <Page.DataContext>
        <local:SettingViewModel />
    </Page.DataContext>
    
    <Grid>
        <TextBlock Text="{Binding TranslatedText}" FontSize="16" FontWeight="Bold" />
        <Button Content="Frensh" Margin="418,243,417,237"  Background="#D8C3A5" Command="{Binding SwitchToFrenchCommand}" />
        <Button Content="English" Margin="418,321,417,162"  Background="#D8C3A5" Command="{Binding SwitchToEnglishCommand}"/>

    </Grid>
</Page>
