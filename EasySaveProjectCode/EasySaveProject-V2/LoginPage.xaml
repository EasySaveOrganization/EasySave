<Page x:Class="EasySaveProject_V2.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveProject_V2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Height="550" Width="1115"
      Background="#EAE7DC">

    <Grid>
        <StackPanel>
            <RadioButton x:Name="rbLocal" Content="Run Locally" IsChecked="True" />
            <RadioButton x:Name="rbRemote" Content="Enter IP Address:" />
            <TextBox x:Name="txtIpAddress" />
            <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click" />
        </StackPanel>
    </Grid>
</Page>
