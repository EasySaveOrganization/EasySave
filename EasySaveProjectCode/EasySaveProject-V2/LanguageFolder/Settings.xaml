<Page x:Class="EasySaveProject_V2.LanguageFolder.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveProject_V2.LanguageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#EAE7DC"
      Title="Settings">

    <Page.DataContext>
        <local:SettingViewModel />
    </Page.DataContext>

    <Grid>
        <TextBlock Text="{Binding Settings}" FontSize="16" FontWeight="Bold" />
        <Button Content="{Binding French}" Margin="400,108,356,330"  Background="#D8C3A5" Command="{Binding SwitchToFrenchCommand}"/>
        <Button Content="{Binding English}" Margin="400,190,357,248"  Background="#D8C3A5" Command="{Binding SwitchToEnglishCommand}"/>
        <Button Content="{Binding AddWork}" Margin="97,388,656,52" Command="{Binding AddWorkCommand}" Background="#D8C3A5" />
        <Button Content="{Binding ExecuteWork}" Margin="608,381,135,54"  Command="{Binding ExecuteWorkCommand}" Background="#D8C3A5" RenderTransformOrigin="0.5,0.5">
        </Button>
    </Grid>
</Page>
